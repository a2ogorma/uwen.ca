<script>
  $("#next-button-1").click(function () {
    $("#form-pt-1").addClass("d-none");
    $("#form-pt-2").removeClass("d-none");
  });

  $("#next-button-2").click(function () {
    $("#form-pt-2").addClass("d-none");
    $("#form-pt-3").removeClass("d-none");
  });

  $("#back-button-2").click(function () {
    $("#form-pt-1").removeClass("d-none");
    $("#form-pt-2").addClass("d-none");
  });

  $("#back-button-3").click(function () {
    $("#form-pt-2").removeClass("d-none");
    $("#form-pt-3").addClass("d-none");
  });
</script>

