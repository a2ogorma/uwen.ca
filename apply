<script src="js/navbar.js"></script>

<script>
  $("#next-button-1").click(function () {
    if(validateForm("#form-pt-1")) {
      $("#form-pt-1").addClass("d-none");
      $("#form-pt-2").removeClass("d-none");
    }
  });

  $("#next-button-2").click(function () {
    if(validateForm("#form-pt-2")) {
      $("#form-pt-2").addClass("d-none");
      $("#form-pt-3").removeClass("d-none");
    }
  });

  $("#mc-embedded-subscribe").click(function (e) {
    e.preventDefault();
    if(validateForm("#form-pt-3")) {
      $("#mc-embedded-subscribe-form").submit();
    }
  });

  $("#back-button-2").click(function () {
    $("#form-pt-1").removeClass("d-none");
    $("#form-pt-2").addClass("d-none");
  });

  $("#back-button-3").click(function () {
    $("#form-pt-2").removeClass("d-none");
    $("#form-pt-3").addClass("d-none");
  });

  function validateForm(form) {
    var valid = true;
    var required = $(form).find(".required");
    
    $.each(required, function(index, item) {
      if (item.value == "" && !item.checked) {
        $(`#${item.id}`).addClass('is-invalid');
        valid = false;
      }
    });
    return valid;
  }

  $("input,select,textarea").focus(function(item) {
    $(`#${this.id}`).removeClass('is-invalid');
  });

  $("input,select,textarea").change(function(item) {
    $(`#${this.id}`).removeClass('is-invalid');
  });
</script>

